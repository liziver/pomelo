extends layout/master.jade

block content
	.main
		.page--full.row
			.col.m7
				.form--input
					.form--title
						h1.headline Let's get you <br> powered up
						h3.subhead Unlimited project timelines, for $9/month
					div.input-field
						label(for='name') Email Address
						input#name(type='text' class='validate')
					div.input-field
						label(for='password') Password
						input#password(type='password' class='validate')

				.form--button.waves-effect.waves-light.btn-large Login

				.input--help.center
					a(href="#") Already have an account?
			.aside--purchase.col.m5
				.aside--purchase-glitters
					figure.aside--purchase-figure
						img.responsive-img(src="dist/images/Professional-plan.png")
