extends layout/master.jade

block content
	.main
		.page--full.row
			.purchase--page.col.m12.s12.l7
				p.form--cancel Cancel
				.form--input
					.form--title
						img.purchase--page-img.show-on-small(src="./dist/images/Professional-plan@2x.png")
						h1.headline Let's get you <br class="hide-on-small-only"> powered up
						h3.subhead Unlimited project timelines, for $9/month
					div.input-field
						label(for='name') Email address
						input#name(type='text' class='validate')
					div.input-field
						label(for='purchase-password') Password
						input#purchase-password(type='password' class='validate')

				.form--button.waves-effect.waves-light.btn-large Login

				.input--help.center
					a(href="#") Already have an account?
			.aside--purchase.col.l5.hide-on-med-and-down
				.aside--purchase-glitters
				.aside--professional-plan
