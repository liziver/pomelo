extends layout/master.jade

block content
	.main
		.page--signup.row
			.col.m7
				.form--input
					.form--title
						h1.headline Welcome back
						h3.subhead It's nice to see you again
					div.input-field
						label(for='name') Email Address
						input#name(type='text' class='validate')
					div.input-field
						label(for='password') Password
						input#password(type='password' class='validate')
					.input--help.center
						a(href="#") Forgot password?

				.form--button.waves-effect.waves-light.btn-large Login

				.input--help.center
					a(href="#") Don't have an account?
			.aside--testimonial.col.m5
				.aside--testimonial-quote
					h2 I got 99 problems but scope <br> creep aint one
					p -Moe A (Dixon&moe.com)
					figure.aside--figure
						img.responsive-img(src="dist/images/devices.png")
